<script>
    function formatMoney(num) {
        return num.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
    }

    function calculateBonus() {
        // 1. Get Inputs
        const personal = parseFloat(document.getElementById('input-personal').value) || 0;
        const unit = parseFloat(document.getElementById('input-unit').value) || 0;
        const total = personal + unit;

        // 2. Update Total Display
        document.getElementById('total-val').innerText = '$' + formatMoney(total);

        // 3. Logic for Rows
        const rows = document.querySelectorAll('.bar-row[data-threshold]');
        let highestActiveRow = null;

        rows.forEach(row => {
            const threshold = parseFloat(row.getAttribute('data-threshold'));
            const barFill = row.querySelector('.bar-fill');
            
            // Calculate width percentage relative to THIS threshold
            // Max out at 100% if exceeded
            let percentage = (total / threshold) * 100;
            if (percentage > 100) percentage = 100;
            if (percentage < 0) percentage = 0;

            // Only show fill if we are close or above
            // Visual logic: Fill based on next tier logic or absolute?
            // Let's do absolute fill for visual effect
            // Scale: 1.5M is max width for visual consistency
            const maxScale = 1500000;
            let visualWidth = (total / maxScale) * 100; 
            
            // If the row threshold is met
            if (total >= threshold) {
                if (!highestActiveRow || threshold > parseFloat(highestActiveRow.getAttribute('data-threshold'))) {
                    highestActiveRow = row;
                }
            }
            
            // For visual bars, let's make them fill up relative to their own goal to look satisfying
            // Or relative to the max tier? Let's use relative to threshold for "Progress Bar" feel
            barFill.style.width = percentage + '%';
            
            // Reset active class
            row.classList.remove('active-tier');
        });

        // 4. Highlight the highest achieved tier
        if (highestActiveRow) {
            highestActiveRow.classList.add('active-tier');
        }
    }

    // Initial Animation
    document.addEventListener('DOMContentLoaded', () => {
        // Set initial bars to a small width just for looks
        const bars = document.querySelectorAll('.bar-fill');
        bars.forEach(bar => {
            bar.style.width = '2%';
        });
    });
</script>

